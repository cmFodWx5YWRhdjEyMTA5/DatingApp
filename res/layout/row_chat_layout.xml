<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.digitalforce.datingapp"
              android:layout_width="match_parent"
              android:padding="5dp"
              android:layout_height="wrap_content"
              android:orientation="horizontal" >

    <com.digitalforce.datingapp.widgets.RoundedImageView
            android:id="@+id/img_match"
            android:layout_weight="0"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:contentDescription="@null"
            android:src="@drawable/farhan"
            android:layout_gravity="center_vertical"
            app:border="true"
            app:border_color="@color/white"
            app:border_width="3dp"
            app:shadow="true" />
    <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView

                    android:id="@+id/txt_match_name"
                    style="@style/txt_base"
                    android:padding="@dimen/dp_3"
                    android:text="@string/member_nmae"
                    android:textSize="@dimen/sp_14" />

            <ImageView
                    android:id="@+id/online_status"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_weight="0"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/online_staus" />

        </LinearLayout>


        <TextView
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:id="@+id/txt_last_msg"
                style="@style/txt_base"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_3"
                android:textColor="#aaaaaa"
                android:text="@string/member_nmae"
                android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
            android:layout_marginTop="2dp"
            android:layout_weight="0"
            android:id="@+id/txt_last_chat_time"
            style="@style/txt_base"
            android:padding="@dimen/dp_3"
            android:textColor="#00baff"
            android:text="@string/member_nmae"
            android:textSize="@dimen/sp_12" />

</LinearLayout>